Console.WriteLine("enter num");
            int a = Convert.ToInt32(Console.ReadLine());


            if (a % 2 != 0)
            {
                for (int i = 1; i <= a; i = i + 2)
                {
                    for (int j = 0; j < a - i; j = j + 2)
                    {
                        Console.Write(" ");
                    }
                    for (int j = 0; j < i; j++)
                    {
                        Console.Write("*");
                    }
                    for (int j = 0; j < a - i; j = j + 2)
                    {
                        Console.Write(" ");
                    }
                    Console.WriteLine();

                }

            }
            else
            {
                for (int i = 0; i <= a; i = i + 2)
                {
                    for (int j = 0; j < a - i; j = j + 2)
                    {
                        Console.Write(" ");
                    }
                    for (int j = 0; j < i; j++)
                    {
                        Console.Write("*");
                    }
                    for (int j = 0; j < a - i; j = j + 2)
                    {
                        Console.Write(" ");
                    }
                    Console.WriteLine();

                }
            }
            Console.ReadLine();
