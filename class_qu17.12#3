            int i = 1;
            int j = 0;
            Console.WriteLine("Enter A Number");
            int a = Convert.ToInt32(Console.ReadLine());
            for ( i = a; 0 < i; i--) 
            {
                for( j=1; j<i ;j++ )
                {
                    Console.Write(" ");
                }
                for (j= j; j <= a; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();

            }

            for(i=1;i<a;i++)
            {
                for (j = 0; j < i; j++)
                {
                    Console.Write(" ");

                }
                for (j=j; j<a;j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }



            Console.ReadLine();
