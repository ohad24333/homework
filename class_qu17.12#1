 int bigest = 0;
            int mone = 0;
            do
            {
                Console.WriteLine("==============Enter A Number.=================");
                int a = Convert.ToInt32(Console.ReadLine());
                if( a<1001&&a>0)
                {
                    mone++;
                    if(a>bigest)
                    {
                        bigest = a;
                    }
                }
            }
            while (mone < 3);
            Console.WriteLine();
            Console.WriteLine("The biggest number u enterd between 1-1000 is: " + bigest);


            Console.ReadLine();
